{
  "name": "MMTodo",
  "version": "0.1.0",
  "summary": "MMTodo is a crossplatform Todo Manger.",
  "description": "MMTodo is a cross platform Todo Manager. It supports both iOS and macOS and saves to a\nMySQL Database ( the user will need to have access to their own ). MMTodo with the rights\nwill create the DB as needed.",
  "homepage": "https://github.com/MatthewMerritt/MMTodo",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "MatthewMerritt": "matthew.merritt@yahoo.com"
  },
  "source": {
    "git": "https://github.com/MatthewMerritt/MMTodo.git",
    "tag": "0.1.0"
  },
  "platforms": {
    "ios": "11.0",
    "osx": "10.13"
  },
  "source_files": [
    "MMTodo/Classes/Common/**/*",
    "MMTodo/Classes/MySQLDriver/**/*"
  ],
  "ios": {
    "source_files": "MMTodo/Classes/MMTodo iOS/**/*",
    "resource_bundles": {
      "MMTodo": [
        "MMTodo/Assets/MMTodo iOS/**/*"
      ]
    }
  },
  "osx": {
    "source_files": "MMTodo/Classes/MMTodo macOS/**/*",
    "resource_bundles": {
      "MMTodo": [
        "MMTodo/Assets/MMTodo macOS/**/*"
      ]
    }
  }
}
